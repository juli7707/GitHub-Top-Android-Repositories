<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragment.GithubRepositoryListFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/repository_swipe_refresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/repository_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/row_repository_item" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        layout="@layout/view_progress"
        android:visibility="gone" />

    <include layout="@layout/view_retry"
        android:visibility="gone"/>

</LinearLayout>